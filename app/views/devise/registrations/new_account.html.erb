<h2>本人確認</h2>

<%= form_for @account do |f| %>
  <%= render "devise/shared/error_messages", resource: @account %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :family_name %>
    <%= f.text_field :family_name %>
  </div>

  <div class="field">
    <%= f.label :hurigana_first %>
    <%= f.text_field :hurigana_first %>
  </div>

  <div class="field">
    <%= f.label :hurigana_family %>
    <%= f.text_field :hurigana_family %>
  </div>

  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>